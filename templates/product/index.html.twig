{% extends "base.html.twig" %}
{% block title %}{{parent()}} -Page de tout les articles{% endblock %}

{% block body %}
<main>
    <section class="products-and-filters">
        <article class="menu_filter">
            <h3>Tous nos produits</h3>
            {% for manga in Mangas %}
            <ul>
            <li><a href="#">{{manga.name}}</a></li>
            </ul>
            {% endfor %}
        </article>

        <article class= "product-container">
            {% for article in allArticles %}
            <article class="product-item">
            <img class="imgproduct" src="{{ asset('img/' ~ article.categoryName ~ '/' ~ article.picture) }}" alt="{{ article.description }}">
            <h3 class="product-item">{{ article.title }}</h3>
            <a class="product-item" href="{{url('product.show', {'slug': article.title})}}">Voir ce produit</a>
    </article>
            {% endfor %}
        </article>
    </section>

</main>

{% endblock %}