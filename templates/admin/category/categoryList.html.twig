{% extends "base.html.twig" %}

{% block body %}
<main>
    <div class="row">
        <div class="col">
            <h2>Category Administration</h2>

            {% include "_inc/notice.html.twig" %}
            <p>
                <a href="{{ url('admin.category.form') }}" class="btn btn-info">Add</a>
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Button</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.name }}</td>
                            <td>
                                <a href="{{ url('admin.category.form.remove', { id: category.id} ) }}" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</main>
{% endblock %}
